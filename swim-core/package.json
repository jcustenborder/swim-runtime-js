    "@swim/recon": "4.0.0-dev.20220527.3",
    "@swim/structure": "4.0.0-dev.20220527.3",
    "@swim/time": "4.0.0-dev.20220527.3",
    "@swim/uri": "4.0.0-dev.20220527.3",
    "@swim/util": "4.0.0-dev.20220527.3",
